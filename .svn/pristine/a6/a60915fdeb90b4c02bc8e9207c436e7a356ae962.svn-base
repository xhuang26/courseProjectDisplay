
body,html{
  padding: 0;
  margin: 0;
}
a {
  color: #A0A0A0;
  text-decoration: none; /* no underline */
}

header{
  height: 170px;
  width: inherited;
  border-bottom: 1px solid #A0A0A0; 
}
.title{
  display: flex;
  align-items: flex-end;
  justify-content: center;
  text-align: center;
  width: inherit;
  height: 100px;
  p {
    color: #A0A0A0;
    font-family: 'Lato', serif;
    font-weight: 300;
    font-size: 25px;
    letter-spacing: 20px;
  }
}

.nav{
  display: flex;
  flex-direction: column;
  width: inherit;
  justify-content: center;
  align-items: center;
  font-family: 'Cormorant Garamond', serif;
  .nav-item {
    color: #A0A0A0;
    font-size: 15px;
    letter-spacing: 5px; 
    padding-bottom: 2px;
    a::before{
      content: '';
      position: absolute;
      margin-top: 18px;
      width: 0;
      border-bottom: 1px solid #A0A0A0;
      transition: 0.4s;
      
    }
    a:hover{
      cursor: pointer;
    }
    a:hover::before{
        width: 20px;
    }
    
  }
}

